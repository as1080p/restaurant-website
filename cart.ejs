<h1>Your Cart</h1>

<div id="cart">
    <ul id="cart-items"></ul>
    <p>Total: ₹<span id="cart-total">0</span></p>
</div>

<h2>Delivery Information</h2>
<form id="delivery-form">
    <label for="address">Delivery Address:</label>
    <input type="text" id="address" name="address" required>
    
    <label for="city">City:</label>
    <input type="text" id="city" name="city" required>
    
    <label for="zipcode">Pin Code:</label>
    <input type="text" id="zipcode" name="zipcode" required>
    
    <label for="phone">Phone Number:</label>
    <input type="tel" id="phone" name="phone" required>
</form>

<h2>Payment Method</h2>
<form id="payment-method-form">
    <label>
        <input type="radio" name="payment-method" value="card" checked> Credit/Debit Card
    </label>
    <label>
        <input type="radio" name="payment-method" value="upi"> UPI
    </label>
    <label>
        <input type="radio" name="payment-method" value="cod"> Cash on Delivery
    </label>
</form>

<button id="checkout-button">Proceed to Checkout</button>

<!-- Payment Modal -->
<div id="payment-modal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Payment Information</h2>
        <form id="payment-form">
            <div id="card-payment-fields">
                <label for="card-number">Card Number:</label>
                <input type="text" id="card-number" name="card-number">
                
                <label for="expiry-date">Expiry Date:</label>
                <input type="text" id="expiry-date" name="expiry-date" placeholder="MM/YY">
                
                <label for="cvv">CVV:</label>
                <input type="text" id="cvv" name="cvv">
            </div>
            
            <div id="upi-payment-fields" style="display: none;">
                <label for="upi-id">UPI ID:</label>
                <input type="text" id="upi-id" name="upi-id" placeholder="yourname@upi">
            </div>
            
            <div id="cod-payment-fields" style="display: none;">
                <p>You will pay ₹<span id="cod-amount"></span> upon delivery.</p>
            </div>
            
            <button type="submit">Confirm Payment</button>
        </form>
    </div>
</div>

<script src="/js/cart.js"></script>